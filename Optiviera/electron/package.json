{
  "name": "optiviera-desktop",
  "version": "1.0.0",
  "description": "Optiviera ERP Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64 && node scripts/generate-checksums.js",
    "build:mac": "electron-builder --mac && node scripts/generate-checksums.js",
    "build:macIntel": "electron-builder --mac --x64 && node scripts/generate-checksums.js",
    "build:linux": "electron-builder --linux --x64 && node scripts/generate-checksums.js",
    "build:linuxArm": "electron-builder --linux --arm64 && node scripts/generate-checksums.js",
    "build:all": "electron-builder --win --mac --linux && node scripts/generate-checksums.js",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "checksums": "node scripts/generate-checksums.js"
  },
  "keywords": [
    "optiviera",
    "erp",
    "desktop",
    "electron"
  ],
  "author": {
    "name": "AkkisTech",
    "email": "info@akkistech.com"
  },
  "homepage": "https://akkistech.com/optiviera",
  "license": "MIT",
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^23.0.0"
  },
  "dependencies": {
    "asar": "^3.2.0",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.akkistech.optiviera",
    "productName": "OptivieraERP",
    "artifactName": "OptivieraERP.${ext}",
    "publish": {
      "provider": "generic",
      "url": "https://akkistech.com/optiviera/updates"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "icon.ico",
      "icon.png",
      "icon.icns",
      "app-files/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "AkkisTech",
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "icon": "icon.icns",
      "category": "public.app-category.business",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icon.png",
      "category": "Office",
      "maintainer": "AkkisTech <info@akkistech.com>"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "allowElevation": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "OptivieraERP",
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": "Business",
      "removeDefaultUninstallWelcomePage": false,
      "warningsAsErrors": false,
      "displayLanguageSelector": false,
      "installerLanguages": [
        "de"
      ]
    }
  }
}
